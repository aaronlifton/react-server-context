{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": false
  },
  "files": [
    "./src/index.ts"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "example"
  ],
  "types": [
    "node"
  ],
  "compileOnSave": false
}
